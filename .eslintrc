{
  parserOptions: {
    ecmaVersion: 2017,
    sourceType: "module",
  },
  env: {
    es6: true,
    browser: true,
    node: true,
    jest: true
  },   
  extends: [
    "eslint:recommended", 
  ],    
  rules: {
    brace-style: ["error", "1tbs", { "allowSingleLine": true }],
    comma-dangle: ["error", "never"],
    quotes: ["error", "single"],
    indent: ["error", 2],
    guard-for-in: "error",
    keyword-spacing: "error",
    max-len: ["warn", 120, 2],
    no-console: ["warn", { allow: ["error"] }],
    no-continue: "error",
    no-debugger: "error",
    no-extra-semi: "error",
    no-eval: "error",
    no-trailing-spaces: "error",
    no-undef: "error",
    no-undefined: "error",
    no-unreachable: "warn",
    no-unused-expressions: "warn",
    no-unused-vars: "error",
    no-with: "error",
    semi: ["error", "always"],
    space-before-function-paren: ["error", "never"],
    spaced-comment: ["error", "always" ],
    valid-typeof: "error",
    vars-on-top: "error"
  }
}
